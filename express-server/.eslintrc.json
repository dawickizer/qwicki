{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
         "ecmaVersion": "latest",
         "sourceType": "module",
         "project": "./tsconfig.json"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "env": { 
         "es2021": true,
         "node": true
    },
    "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "linebreak-style": ["error", "unix"]
    }
}